<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoices</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Invoices</h1>
    <table>
        <thead>
            <tr>
                <th>Invoice Number</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Session Date</th>
                <th>Due Date</th>
                <th>Hours</th>
                <th>Price</th>
                <th>Total</th>
                <th>Paid Status</th>
            </tr>
        </thead>
        <tbody>
            <% invoices.forEach(invoice => { %>
                <tr>
                    <td><%= invoice.invoiceNumber %></td>
                    <td><%= invoice.customerName %></td>
                    <td><%= invoice.customerEmail %></td>
                    <td><%= new Date(invoice.sessionDate).toLocaleDateString("en-US") %></td>
                    <td><%= new Date(invoice.dueDate).toLocaleDateString("en-US") %></td>
                    <td><%= invoice.hours %></td>
                    <td><%= invoice.price %></td>
                    <td><%= invoice.total %></td>
                    <td><%= invoice.isPaid ? "Paid" : "notPaid" %></td>
                </tr>
            <% }) %>
        </tbody>        
    </table>    
</body>
</html>
